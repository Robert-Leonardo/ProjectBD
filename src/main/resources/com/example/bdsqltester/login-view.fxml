                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 5;" />
